<%= form_with(
    model: content,
    html: { class: %w[form-inline] }
  ) do |f| %>
  <div class="input-group">
    <%= f.text_field(:url, class: %w[form-control], placeholder: "URL", autocomplete: "off") %>
    <%= f.button(class: %w[btn btn-primary]) do %>
      <i class="bi bi-plus-lg"></i>
    <% end %>
  </div>
<% end %>
<div class="m-3"></div>
<%= link_to(contents_import_path, class: %w[btn btn-warning], data: { turbo: false }) do %>
  <i class="bi bi-file-arrow-up"></i>
  <span>Import</span>
<% end %>
