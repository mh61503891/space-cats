
<div class="toast-container position-fixed bottom-0 end-0 p-3">
  <div id="liveToast" class="toast hide" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
    <strong class="me-auto">Space Cat</strong>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body">
    <%= notice %>
    </div>
  </div>
</div>


<% if notice %>
<div class="toast-container position-fixed bottom-0 end-0 p-3">
  <div class="mb-2 toast hide border-primary" data-controller="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header text-primary">
      <strong class="me-auto">Space Cat</strong>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body">
      <%= notice %>
    </div>
  </div>
</div>
<% end %>
<% if alert %>
<div class="toast-container position-fixed bottom-0 end-0 p-3">
  <div class="mb-2 toast hide border-danger" data-controller="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header text-primary">
      <strong class="me-auto">Space Cat</strong>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body">
      <%= alert %>
    </div>
  </div>
</div>
<% end %>
