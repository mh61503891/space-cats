<%= render('shared/alert_flash') %>
<%= render("form", keyword: Keyword.new) %>
<div class="mt-3"></div>
<%= form_with(
  local: true,
  method: :post,
  url: assign_keywords_path,
  html: {
    class: %w[form-inline mb-3]
  }) do |f| %>
  <div class="input-group">
    <%= f.button 'Assign', class: %w[btn btn-primary] %>
  </div>
<% end %>
<ul>
  <% @keywords.each do |keyword| %>
    <li><%= link_to keyword.name, keyword_path(keyword) %> (<%= keyword.contents.size %>)</li>
  <% end %>
</ul>
